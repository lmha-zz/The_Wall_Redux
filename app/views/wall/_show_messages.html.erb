<% if @all_messages.any? %>
  <% @all_messages.each do |message| %>
    <div class="message_wrapper">
      <p class="message_author"><%= message.user.first_name %> - <%= message.created_at.strftime('%B %d, %Y') %></p>
      <p class="message"><%= message.message %></p>
      <%= render partial: 'show_comments', locals: { message: message } %>
      <%= render partial: 'comment_form', locals: { message: message } %>
    </div>
  <% end %>
<% end %>