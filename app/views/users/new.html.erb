<%= content_for :title do %>
  Register/Login
<% end %>

<div id="left_wrapper">
  <h1>Register</h1>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p class="error"><%= error %></p>
    <% end %>
  <% end %>

  <%= form_for(@user) do |u| %>
    <%= u.label :first_name, "First Name:" %>
    <%= u.text_field :first_name %><br>
    <%= u.label :last_name, "Last Name:" %>
    <%= u.text_field :last_name %><br>
    <%= u.label :email, "Email:" %>
    <%= u.text_field :email %><br>
    <%= u.label :password, "Password:" %>
    <%= u.password_field :password %><br>
    <%= u.label :password_confirmation, "Confirm Password:" %>
    <%= u.password_field :password_confirmation %><br>
    <%= u.submit 'Register' %>
  <% end %>
</div>

<div id="right_wrapper">
  <h1>Sign In</h1>

  <% if flash[:error] %>
    <p><%= flash[:error] %></p>
  <% end %>

  <%= form_tag sessions_path do %>
    <%= label_tag :email, "Email:" %>
    <%= text_field_tag :email %><br>
    <%= label_tag :password, "Password:" %>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Login" %>
  <% end %>
</div>